@model Specialty

@{
    ViewData["Title"] = "Details of " + Model.Name;
}

<h1>Details of @Model.Name</h1>

<div>
    <h4>Specialty</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@Model?.SpecialtyId">Edit</a>
    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model?.SpecialtyId">Delete</a>
    <a class="btn btn-outline-primary" asp-action="Index">Back to List</a>
</div>
