@model ServiceIndexViewModel

@{
    ViewData["Title"] = "Delete " + Model.ServiceName;
}

<h1>Delete</h1>

<h3>Are you sure you want to delete @Model.ServiceName?</h3>
<div>
    <h4>Service</h4>
    <hr />
    <dl class="row">
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ServiceName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ServiceName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ServiceTime)
        </dt>
        <dd class="col-sm-10">
            @{
                // Add hour/hours following ServiceTime
                int serviceTime = Model.ServiceTime ?? 0;
                string timeText = serviceTime == 1 ? "hour" : "hours";
            }
            @Html.DisplayFor(model => model.ServiceTime)
            @timeText
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fee)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClinicName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClinicName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ServiceId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <div>
        <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@Model?.ServiceId">Edit</a>
        <a class="btn btn-outline-primary" asp-action="Index">Back to List</a>
    </div>
</div>
