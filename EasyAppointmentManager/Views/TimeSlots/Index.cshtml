@model IEnumerable<EasyAppointmentManager.Models.TimeSlotIndexViewModel>

@{
    ViewData["Title"] = "Index of TimeSlots";
}

<h1>Index of TimeSlots</h1>
@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
else
{

}
<p>
    <a asp-action="Create">Create New TimeSlot</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TimeSlotDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeSlotStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TimeSlotDate, "{0:dd/MM/yyyy}", new {maxlength = 10})
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime, "{0:hh:mm tt}", new {maxlength = 8})
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime, "{0:hh:mm tt}", new {maxlength = 8})
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeSlotStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorName)
            </td>
            <td>
                <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.TimeSlotId">Edit</a>
                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.TimeSlotId">Details</a>
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.TimeSlotId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
