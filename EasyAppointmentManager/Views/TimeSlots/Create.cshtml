@model TimeSlotCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TimeSlot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Doctors" class="control-label"></label>
                <select asp-for="ChosenDoctor" class="form-control">
                    @foreach (Doctor doctor in Model.Doctors)
                    {
                        <option value="@doctor.DoctorId">@doctor.FullName</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="TimeSlotDate" class="control-label"></label>
                <input asp-for="TimeSlotDate" class="form-control" />
                <span asp-validation-for="TimeSlotDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeSlotStatus" class="control-label"></label>
                <div>
                    <!-- Uses HTML helpers -->
                    @Html.RadioButtonFor(model => model.TimeSlotStatus, TimeslotStatus.Available)
                    <span>Available</span>

                    <span>&emsp;</span>

                    @Html.RadioButtonFor(model => model.TimeSlotStatus, TimeslotStatus.Booked)
                    <span>Booked</span>
                </div>
            </div>
            <!--
            <div class="form-group">
                <label asp-for="TimeSlotStatus" class="control-label"></label>
                <select asp-for="TimeSlotStatus" class="form-control" asp-items="Html.GetEnumSelectList<TimeslotStatus>()"></select>
                <span asp-validation-for="TimeSlotStatus" class="text-danger"></span>
            </div>
            -->

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-primary" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
